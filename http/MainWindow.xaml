<Window x:Class="http.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:http"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel x:Name="form">
            <TextBox x:Name="name"/>
            <TextBox x:Name="surname"/>
            <TextBox x:Name="city"/>
            <TextBox x:Name="phone"/>

            <Button Click="addUser">Pridat</Button>
            <DataGrid x:Name="myDataGrid"></DataGrid>
        </StackPanel>
        <StackPanel x:Name="login">
            <TextBox x:Name="email"/>
            <TextBox x:Name="password"/>
            <Button Click="Auth">Prihlasit</Button>
        </StackPanel>

    </StackPanel>
</Window>
